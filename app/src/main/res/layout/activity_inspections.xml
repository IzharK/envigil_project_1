<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inspections">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#7FFF00">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Route"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_insp_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inspection Date"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:inputType="date"/>

            <ImageView
                android:id="@+id/img_insp_date"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_date"
                android:paddingBottom="10dp"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/emp1_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="17dp"/>

        <Spinner
            android:id="@+id/emp2_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_strt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Start Time"
                android:inputType="time"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_strt_time"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_access_time"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="End Time"
                android:inputType="time"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_end_time"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_access_time"/>

        </LinearLayout>

        <EditText
            android:id="@+id/ed_lunch_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Lunch"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/ed_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Travel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/ed_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Admin"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/ed_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Repair"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:paddingLeft="5dp"/>

        <EditText
            android:id="@+id/ed_reinspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Reinspect"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:paddingLeft="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_sve_insp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="save"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:background="#7FFF00"/>

</androidx.constraintlayout.widget.ConstraintLayout>